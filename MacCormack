#include<stdio.h>
#include<math.h>

int main()
{ 
  
  double t,y,tt;
  double u[100][100000],a[100];
  int i,j,n,m,k,s;


  FILE *fp;
  fp=fopen("cfd result.txt","w");
 
  printf("Enter the time step ");
  scanf("%lf",&t);

  printf("Enter the grid size");
  scanf("%lf",&y);
  
  printf("Enter the time  ");
  scanf("%lf",&tt);
 
  
      
   n=tt/t;
   s=4/y;

  for(j=0;j<(n+1);j++)
    {
        u[0][j]=1;
  u[99][j]=0;
     }
	


  for(i=1;i<(s/2+1);i++)
   u[i][0]=1;

  for(i=(s/2+1);i<(s+1);i++)
   u[i][0]=0;  
  
 for(j=0;j<n;j++)
   {
     for(i=1;i<(s+1);i++)
	a[i]=u[i][j]-(t/(2*y))*(pow(u[i+1][j],2)-pow(u[i][j],2));
     for(i=1;i<(s+1);i++)
        u[i][j+1]=0.5*(u[i][j]+a[i]-(t/(2*y))*(pow(a[i],2)-pow(a[i-1],2)));
    }

  for(i=0;i<(s+1);i++)
    fprintf(fp,"%lf\n",u[i][n]);
   
}
